<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#807878"
        android:layout_marginTop="0dp"> <!-- Add this line to move the layout down -->
    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter number:     "
        android:inputType="number"
        android:text=""
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="end"
        android:padding="8dp"
        android:background="#5D6871" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="end"
        android:padding="8dp"
        android:background="#C8D2DA" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp" />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4"
            android:background="#000000"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/btn1"
                android:layout_columnWeight="1"
                android:text="1"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/btn2"
                android:layout_columnWeight="1"
                android:text="2"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/btn3"
                android:layout_columnWeight="1"
                android:text="3"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/btn4"
                android:layout_columnWeight="1"
                android:text="4"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/btn5"
                android:layout_columnWeight="1"
                android:text="5"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/btn6"
                android:layout_columnWeight="1"
                android:text="6"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/btn7"
                android:layout_columnWeight="1"
                android:text="7"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/btn8"
                android:layout_columnWeight="1"
                android:text="8"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/btn9"
                android:layout_columnWeight="1"
                android:text="9"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/btn0"
                android:layout_columnWeight="1"
                android:text="0"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/btnDelete"
                android:layout_columnWeight="1"
                android:text="Delete"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/btnResult"
                android:layout_columnWeight="1"
                android:text="Result"
                android:textSize="25sp"
                android:gravity="center"/>

        </GridLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:columnCount="3"
        android:rowCount="4"
        android:useDefaultMargins="true">
    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="40sp"/>
    <Button
        android:id="@+id/subtractButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="40sp"
        android:layout_below="@id/addButton" />
    <Button
        android:id="@+id/multiplyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="40sp"
        android:layout_below="@id/subtractButton" />
    <Button
        android:id="@+id/divideButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="40sp"
        android:layout_below="@id/multiplyButton"/>
    <Button
        android:id="@+id/moduloButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textSize="40sp"
        android:layout_below="@id/divideButton" />
    </GridLayout>


    </LinearLayout>


